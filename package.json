{
  "name": "hnews",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "prestart": "npm run generate:version",
    "build": "ng build",
    "prebuild": "npm run generate:version",
    "build:prod": "ng build --configuration production",
    "prebuild:prod": "npm run generate:version",
    "watch": "ng build --watch --configuration development",
    "prewatch": "npm run generate:version",
    "test": "ng test --watch=false",
    "pretest": "node ./scripts/clean-test-output.mjs && npm run generate:version",
    "test:watch": "ng test",
    "pretest:watch": "node ./scripts/clean-test-output.mjs && npm run generate:version",
    "test:coverage": "ng test --watch=false --code-coverage",
    "pretest:coverage": "node ./scripts/clean-test-output.mjs && npm run generate:version",
    "test:coverage:watch": "ng test --code-coverage",
    "pretest:coverage:watch": "node ./scripts/clean-test-output.mjs && npm run generate:version",
    "predeploy": "npm run build:prod",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "generate:version": "node ./scripts/generate-version.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,html,json}": "prettier --write"
  },
  "dependencies": {
    "@angular/common": "^20.3.1",
    "@angular/core": "^20.3.1",
    "@angular/forms": "^20.3.1",
    "@angular/platform-browser": "^20.3.1",
    "@angular/router": "^20.3.1",
    "@angular/service-worker": "^20.3.1",
    "@fortawesome/angular-fontawesome": "^3.0.0",
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler": "^20.3.1",
    "@angular/compiler-cli": "^20.3.1",
    "@angular/language-service": "^20.3.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.3.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jasmine-core": "^5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.5",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1"
  }
}
