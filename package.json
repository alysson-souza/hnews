{
  "name": "hnews",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "prestart": "npm run generate:version",
    "build": "ng build",
    "prebuild": "npm run generate:version",
    "build:prod": "ng build --configuration production",
    "prebuild:prod": "npm run generate:version",
    "watch": "ng build --watch --configuration development",
    "prewatch": "npm run generate:version",
    "test": "ng test --watch=false --no-progress",
    "pretest": "node ./scripts/clean-test-output.mjs && npm run generate:version",
    "test:watch": "ng test",
    "pretest:watch": "node ./scripts/clean-test-output.mjs && npm run generate:version",
    "test:coverage": "ng test --watch=false --code-coverage --no-progress",
    "pretest:coverage": "node ./scripts/clean-test-output.mjs && npm run generate:version",
    "test:coverage:watch": "ng test --code-coverage",
    "pretest:coverage:watch": "node ./scripts/clean-test-output.mjs && npm run generate:version",
    "predeploy": "npm run build:prod",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:webkit": "playwright test --project=webkit",
    "e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "e2e:report": "playwright show-report",
    "e2e:codegen": "playwright codegen http://localhost:4200",
    "lint": "ng lint --max-warnings=0",
    "lint:fix": "ng lint --fix --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "generate:version": "node ./scripts/generate-version.mjs"
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,html,json}": "prettier --write"
  },
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/service-worker": "^21.0.0",
    "@ng-icons/core": "^33.0.0",
    "@ng-icons/solar-icons": "^33.0.0",
    "@standard-schema/spec": "^1.0.0",
    "dompurify": "^3.3.0",
    "highlight.js": "^11.11.1",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@angular/language-service": "^21.0.0",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.10.1",
    "angular-eslint": "^21.0.0",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.8.30",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "fake-indexeddb": "^6.2.5",
    "globals": "^15.12.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.39.1",
    "vitest": "^4.0.12"
  }
}
