{
  "name": "hnews",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:cf": "ng serve --port 4200 & wrangler pages dev --proxy 4200 --port 8788",
    "prestart": "BASE_URL=http://localhost:4200 npm run generate:version && BASE_URL=http://localhost:4200 npm run generate:userscript",
    "build": "ng build",
    "prebuild": "npm run generate:version && npm run generate:userscript",
    "build:prod": "ng build --configuration production",
    "prebuild:prod": "npm run generate:version && npm run generate:userscript",
    "watch": "ng build --watch --configuration development",
    "prewatch": "npm run generate:version && npm run generate:userscript",
    "test": "ng test --watch=false --no-progress",
    "pretest": "node ./scripts/clean-test-output.mjs && npm run generate:version && npm run generate:userscript",
    "test:watch": "ng test",
    "pretest:watch": "node ./scripts/clean-test-output.mjs && npm run generate:version && npm run generate:userscript",
    "test:coverage": "ng test --watch=false --code-coverage --no-progress",
    "pretest:coverage": "node ./scripts/clean-test-output.mjs && npm run generate:version && npm run generate:userscript",
    "test:coverage:watch": "ng test --code-coverage",
    "pretest:coverage:watch": "node ./scripts/clean-test-output.mjs && npm run generate:version && npm run generate:userscript",
    "predeploy": "npm run build:prod",
    "deploy:cf": "npx ng build --configuration production --base-href \"/\" --output-path dist/hnews-cf && wrangler pages deploy dist/hnews-cf/browser --project-name=hnews",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:webkit": "playwright test --project=webkit",
    "e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "e2e:report": "playwright show-report",
    "e2e:codegen": "playwright codegen http://localhost:4200",
    "lint": "ng lint --max-warnings=0",
    "lint:fix": "ng lint --fix --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "generate:version": "node ./scripts/generate-version.mjs",
    "generate:userscript": "node ./scripts/generate-userscript.mjs"
  },
  "private": true,
  "engines": {
    "node": ">=22.0.0 <23.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "@isaacs/brace-expansion": "5.0.1",
    "@modelcontextprotocol/sdk": "1.26.0",
    "hono": "4.11.7",
    "tar": "7.5.7"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,html,json}": "prettier --write"
  },
  "dependencies": {
    "@angular/common": "^21.1.3",
    "@angular/core": "^21.1.3",
    "@angular/forms": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/router": "^21.1.3",
    "@angular/service-worker": "^21.1.3",
    "@ng-icons/core": "^33.0.0",
    "@ng-icons/solar-icons": "^33.0.0",
    "@standard-schema/spec": "^1.0.0",
    "dompurify": "^3.3.0",
    "highlight.js": "^11.11.1",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler": "^21.1.3",
    "@angular/compiler-cli": "^21.1.3",
    "@angular/language-service": "^21.1.3",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.10.1",
    "angular-eslint": "^21.2.0",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.19",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "fake-indexeddb": "^6.2.5",
    "globals": "^15.12.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.39.1",
    "vitest": "^4.0.12",
    "wrangler": "^4.54.0"
  }
}
